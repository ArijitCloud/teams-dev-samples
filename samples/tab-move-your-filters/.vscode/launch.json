{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Remote (Edge)",
            "type": "pwa-msedge",
            "runtimeExecutable": "beta",
            "request": "launch",
            "url": "https://teams.microsoft.com/l/app/${teamsAppId}?installAppPackage=true&webjoin=true&${account-hint}",
            "presentation": {
                "group": "remote",
                "order": 1
            }
        },
        {
            "name": "Launch Remote (Chrome)",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "https://teams.microsoft.com/l/app/${teamsAppId}?installAppPackage=true&webjoin=true&${account-hint}",
            "presentation": {
                "group": "remote",
                "order": 2
            }
        },
        {
            "name": "Launch Remote (Firefox)",
            "type": "firefox",
            "request": "launch",
            "url": "https://teams.microsoft.com/l/app/${teamsAppId}?installAppPackage=true&webjoin=true&${account-hint}",
            "presentation": {
                "group": "remote",
                "order": 2
            }
        },
        {
            "name": "Start and Attach to Frontend (Edge)",
            "type": "pwa-msedge",
            "runtimeExecutable": "stable",
            "request": "launch",
            "url": "https://teams.microsoft.com/l/app/${localTeamsAppId}?installAppPackage=true&webjoin=true&${account-hint}",
            "preLaunchTask": "Start Frontend",
            "presentation": {
                "group": "all",
                "hidden": true
            }
        },
        {
            "name": "Start and Attach to Frontend (Chrome)",
            "type": "pwa-chrome",
            "request": "launch",
            "userDataDir": false,
            "url": "https://teams.microsoft.com/l/app/${localTeamsAppId}?installAppPackage=true&webjoin=true&${account-hint}",
            "preLaunchTask": "Start Frontend",
            "presentation": {
                "group": "all",
                "hidden": true
            },
            "runtimeArgs": [
                "--profile-directory='Profile 1'"
            ]
        },
        {
            "name": "Start and Attach to Frontend (Firefox)",
            "type": "firefox",
            "request": "launch",
            "url": "https://teams.microsoft.com/l/app/${localTeamsAppId}?installAppPackage=true&webjoin=true&${account-hint}",
            "preLaunchTask": "Start Frontend",
            "presentation": {
                "group": "all",
                "hidden": true
            }
        }
    ],
    "compounds": [
        {
            "name": "Debug (Edge)",
            "configurations": [
                "Start and Attach to Frontend (Edge)"
            ],
            "preLaunchTask": "Pre Debug Check",
            "presentation": {
                "group": "all",
                "order": 1
            },
            "stopAll": true
        },
        {
            "name": "Debug (Chrome)",
            "configurations": [
                "Start and Attach to Frontend (Chrome)"
            ],
            "preLaunchTask": "Pre Debug Check",
            "presentation": {
                "group": "all",
                "order": 2
            },
            "stopAll": true
        },
        {
            "name": "Debug (Firefox)",
            "configurations": [
                "Start and Attach to Frontend (Firefox)"
            ],
            "preLaunchTask": "Pre Debug Check",
            "presentation": {
                "group": "all",
                "order": 2
            },
            "stopAll": true
        }
    ]
}